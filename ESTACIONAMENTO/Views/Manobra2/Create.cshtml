@model ESTACIONAMENTO.Models.Manobra2

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>@ViewData["Title"]</h1>

<h4>Manobra - Recepção/@Model.Status</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Carro</label>
                <select asp-for="CarroId" class="form-control" asp-items="ViewBag.CarroId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Manobrista</label>
                <select asp-for="ManobristaId" class="form-control" asp-items="ViewBag.ManobristaId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo Manobra</label>
                <select asp-for="Classificacao" id="classificacao" class="form-control" asp-items="ViewBag.Classificacoes" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" id="status" disabled />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" onclick="HabilitaStatus();" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="IndexA">Retorna para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    function HabilitaStatus() {
        document.getElementById("status").disabled = false;
        document.getElementById("classificacao").disabled = false;
    }

</script>
