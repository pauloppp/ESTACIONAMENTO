@model ESTACIONAMENTO.Models.Manobra2

@{
    ViewData["Title"] = "Editar";
}

<script src="~/js/site.js"></script>

<h1>@ViewData["Title"]</h1>

<div class="row border1">
    <div class="col-md-4">
        <div>
            <h4>Manobra</h4>
            <hr />
        </div>
        <form asp-action="Edit" id="editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Carro</label>
                <select asp-for="CarroId" class="form-control" asp-items="ViewBag.Carros"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Manobrista</label>
                <select asp-for="ManobristaId" class="form-control" asp-items="ViewBag.Manobristas"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo Manobra</label>
                <select asp-for="Classificacao" id="Classificacao" class="form-control" asp-items="ViewBag.Classificacoes" disabled></select>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrada" class="control-label"></label>
                <input asp-for="DataEntrada" id="DataEntrada" class="form-control" disabled />
                <span asp-validation-for="DataEntrada" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" id="Status" class="form-control" disabled />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" onclick="HabilitaTodosE();" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="IndexA">Retorna para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
