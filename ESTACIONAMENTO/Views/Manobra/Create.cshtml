@model ESTACIONAMENTO.Models.Manobra

@{
    ViewData["Title"] = "Cadastrar";
}

<link href="~/css/site.css" rel="stylesheet" />

<h1>@ViewData["Title"]</h1>

<h4>Manobra</h4>
<hr />
<div class="row border1">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Carro</label>
                <select asp-for="CarroId" class="form-control" asp-items="ViewBag.Carros"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Manobrista</label>
                <select asp-for="ManobristaId" class="form-control" asp-items="ViewBag.Manobristas"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Tipo Manobra</label>
                <select asp-for="Classificacao" class="form-control" asp-items="ViewBag.Classificacoes"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
