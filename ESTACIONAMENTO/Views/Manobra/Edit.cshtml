@model ESTACIONAMENTO.Models.Manobra

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Manobra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarroId" class="control-label"></label>
                <select asp-for="CarroId" class="form-control" asp-items="ViewBag.CarroId"></select>
                <span asp-validation-for="CarroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManobristaId" class="control-label"></label>
                <input asp-for="ManobristaId" class="form-control" />
                <span asp-validation-for="ManobristaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classificacao" class="control-label"></label>
                <input asp-for="Classificacao" class="form-control" />
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoManobra" class="control-label"></label>
                <input asp-for="TipoManobra" class="form-control" />
                <span asp-validation-for="TipoManobra" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
