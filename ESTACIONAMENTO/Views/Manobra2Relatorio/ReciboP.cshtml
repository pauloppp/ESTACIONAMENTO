@model ESTACIONAMENTO.Models.Manobra2
@using ESTACIONAMENTO.Extensoes;

@{
    ViewData["Title"] = "Recibo de Pagamento";
    var tempo = (int)(Model.DataSaida - Model.DataEntrada).TotalMinutes;
}

<br />
<div>
    <div class="row" style="background-color:darkgrey">
        <hr />
        <div class="col-md-6">
            <h1>@ViewData["Title"]</h1>
            <h4>Manobra - @Model.Classificacao/@Model.Status</h4>
        </div>
        <div class="col-md-6">
            Emitido em: @DateTime.Now
        </div>
        <hr />
    </div>

    <dl class="row" style="background-color:gainsboro">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataSaida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
        <dt class="col-sm-2">
            Permanência
        </dt>
        <dd class="col-sm-10">
            @tempo minutos
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carro.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carro.Placa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carro.Placa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manobrista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manobrista.Nome)
        </dd>
        <dt class="col-sm-2">
            Valor R$
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor) (@Model.Valor.ToExtenso())
        </dd>
    </dl>
</div>


